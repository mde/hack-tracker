<div class="hero-unit">
  <h2>All Hacks</h2>
  <%- linkTo('Create a new Hack', addHackPath, {class: 'btn pull-right'}); %>
</div>

<div id="hacks-list">
<% if (hacks) { %>
<% for (var i = 0, ii = hacks.length; i < ii; i++) { %>
  <div class="row list-item" id="hack-<%= hacks[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(hacks[i].id, hackPath(hacks[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= hacks[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>